{
    "include": [
        "src/"
    ],
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationDir": "./dist",
        "types": ["vite/client"],
        "jsx": "preserve",
        "lib": [
            "esnext",
            "dom"
        ],
        "paths": {
            "@/*": ["./src/*"]
        }
    }
}